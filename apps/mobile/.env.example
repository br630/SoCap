# =============================================================================
# API Configuration
# =============================================================================

# Base URL of the backend API
# Development: http://localhost:3000
# Production: https://api.yourdomain.com
# IMPORTANT: For iOS/Android, use your local IP for development (e.g., http://192.168.1.100:3000)
# or use a service like ngrok for testing
API_URL=http://localhost:3000

# API timeout in milliseconds (default: 30000 = 30 seconds)
API_TIMEOUT=30000

# =============================================================================
# Firebase Configuration (Client SDK)
# =============================================================================

# Firebase Web API Key
# Found in Firebase Console > Project Settings > General > Web API Key
# This is safe to expose in client-side code
FIREBASE_API_KEY=your-firebase-web-api-key

# Firebase Auth Domain
# Format: your-project-id.firebaseapp.com
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
# Found in Firebase Console > Project Settings > General
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Storage Bucket
# Format: your-project-id.appspot.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID
# Found in Firebase Console > Project Settings > Cloud Messaging
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# Firebase App ID
# Found in Firebase Console > Project Settings > General
FIREBASE_APP_ID=your-firebase-app-id

# Optional: Firebase Measurement ID (for Analytics)
# FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# Google APIs Configuration (Mobile)
# =============================================================================

# Google OAuth 2.0 Client ID (iOS)
# Get from: https://console.cloud.google.com/apis/credentials
# Format: xxxxxx-xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios.apps.googleusercontent.com

# Google OAuth 2.0 Client ID (Android)
# Get from: https://console.cloud.google.com/apis/credentials
# Format: xxxxxx-xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android.apps.googleusercontent.com

# Google API Key (for services like Maps, Places, etc.)
# Get from: https://console.cloud.google.com/apis/credentials
# Restrict this key to specific APIs and your app's bundle ID/package name
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# App Configuration
# =============================================================================

# App environment: 'development', 'staging', or 'production'
# Affects API endpoints, logging, and feature flags
APP_ENV=development

# Enable debug mode (shows additional logging and dev tools)
# Set to 'true' or 'false'
DEBUG_MODE=true

# =============================================================================
# Optional: Feature Flags
# =============================================================================

# Enable/disable specific features
# ENABLE_ANALYTICS=true
# ENABLE_CRASH_REPORTING=true
# ENABLE_PUSH_NOTIFICATIONS=true

# =============================================================================
# Optional: Sentry Configuration (Mobile)
# =============================================================================

# Sentry DSN for mobile error tracking
# Get from: https://sentry.io/settings/YOUR_ORG/projects/YOUR_PROJECT/keys/
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Sentry environment
# SENTRY_ENVIRONMENT=development

# =============================================================================
# Optional: Expo Configuration
# =============================================================================

# Expo API URL (usually only needed for custom Expo servers)
# EXPO_API_URL=https://exp.host

# Expo public URL (for OTA updates)
# EXPO_PUBLIC_URL=https://your-app.exp.host
